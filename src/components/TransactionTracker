import React from "react";

const TransactionTracker = ({ txHash }) => {
  return txHash ? (
    <div>
      <p>Transaction Submitted!</p>
      <a
        href={`https://seitrace.com/tx/${txHash}?chain=atlantic-2`}
        target="_blank"
        rel="noopener noreferrer"
      >
        View on SeiTrace
      </a>
    </div>
  ) : null;
};

export default TransactionTracker;
